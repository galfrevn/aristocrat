{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["jest", "node"],
		"resolveJsonModule": true
	},
	"include": ["__tests__/**/*", "src/**/*"],
	"exclude": ["dist", "node_modules"]
}
