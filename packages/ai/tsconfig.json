{
	"extends": "@aristocrat/typescript/schemas/node.json",
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "dist",
		"noEmit": false,
		"composite": true,
		"types": ["node", "jest"],
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/**/*.test.ts"],
	"exclude": ["node_modules", "dist"]
}
