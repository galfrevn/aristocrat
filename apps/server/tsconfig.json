{
	"extends": "@aristocrat/typescript/schemas/node.json",
	"compilerOptions": {
		"composite": true,
		"noEmit": false,
		"baseUrl": "./",
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["bun"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"include": ["src/**/*"],
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
